<div class="post-container" align="center">
  <div class="col-xs-12">
    <div class="col-md-4 col-xs-1"></div>
      <div class="col-md-4 col-xs-10">
        <h2>Edit <%= resource_name.to_s.humanize %> <% unless current_user.admin? %><span class="h4">
            <%= link_to "", registration_path(resource_name), class:"glyphicon glyphicon-trash",
                      data: { confirm: "Are you sure you want to permanently delete your profile?" }, method: :delete %></span>
                      <% end %>
        </h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, class: "form-control", placeholder: "email", autofocus: true %><br />
        </div>

        <div class="field">
          <%= f.text_field :name, class: "form-control", placeholder: "name", autofocus: true %><br />
        </div>

        <div class="field">
          <%= f.text_area :description, rows: 4, class: "form-control", placeholder: "about", autofocus: true %><br />
        </div>

        <div class="field">
          <%= f.text_field :github, class: "form-control", placeholder: "github url (optional)", autofocus: true %><br />
        </div>

        <div class="field">
          <%= f.text_field :twitter, class: "form-control", placeholder: "twitter url (optional)", autofocus: true %></br>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.password_field :password, class: "form-control", placeholder: "new password (optional)", autocomplete: "off" %><br />
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password confirmation", autocomplete: "off" %><br />
        </div>

        <div class="field">
          <%= f.password_field :current_password, class: "form-control", placeholder: "current password (required)", autocomplete: "off" %><br />
        </div>

        <div class="actions">
          <%= f.submit "Update", class:"btn btn-md btn-primary" %>
          <h4>[ <%= link_to "Cancel", posts_path %> ]</h4>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
