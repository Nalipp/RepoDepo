<div class="post-container" align="center">
  <div class="col-xs-12">
    <div class="col-md-4 col-xs-1"></div>
      <div class="col-md-4 col-xs-10">
        <h2>Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, class: "form-control", placeholder: "email", autofocus: true %><br />
        </div>

        <div class="field">
          <%= f.text_field :name, class: "form-control", placeholder: "name", autofocus: true %></br>
        </div>

        <div class="field">
          <%= f.text_field :github, class: "form-control", placeholder: "github url (optional)", autofocus: true %></br>
        </div>

        <div class="field">
          <%= f.password_field :password, class: "form-control", placeholder: "password", autocomplete: "off" %></br>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "confirm password", autocomplete: "off" %></br>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-md btn-primary" %><br />
          <h4>[ <%= link_to "Sign up", new_user_session_path %> ] [ <%= link_to "Cancel", posts_path %> ]</h4>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
