<div class="post-container">
  <div class="col-xs-12">
    <div class="col-md-4 col-xs-1"></div>
      <div class="col-md-4 col-xs-10">
    <%= form_for @post do |f| %>
      <div>
        <%= f.text_field :title, class: "form-control", placeholder: "Project title", autofocus: true %></br>
      </div>
      <div>
        <%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Project description" %></br>
      </div>
      <div>
        <%= f.text_field :link, class: "form-control", placeholder: "Share your repository (link)" %></br>
      </div>
      <div>
        <h3><%= f.submit class: "btn btn-primary btn-lg" %> [ <%= link_to "Cancel", posts_path %> ]</h3>
      </div>
      <% end %>
    </div>
  </div>
</div>
