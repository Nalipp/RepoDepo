<div class="col-md-12">
  <div class="col-md-3"></div>
  <div class=" col-md-6">
  <h1 align="center">All users</h1>
  <table>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td id="user-table" class="col-xs-1"><%= gravatar_for(user, 30) %></td>
        <% if user.github? %>
        <td><i><%= link_to "", "http://#{user.github}", :target => "_blank", class:"fa fa-github-alt", id:"icon-space"%></i></td>
        <% end %>
        <!-- <%# if user.twitter? %>
        <td><i><%#= link_to "", "", :target => "_blank", class:"fa fa-twitter-square"%></i></td>
        <%# end %> -->
        <td id="user-table" class="col-xs-1"><%= user.name %></td>
        <td id="user-table"><%= user.github %></td>
        <td><%= link_to "View Profile", user_path(user),
                                                  class: "btn btn-xs btn-success" %>
          <% if current_user.not_friends_with?(user.id) %>
            <%= link_to "Add as my friend", add_friend_path(user: current_user, friend: user),
                                              class: "btn btn-xs btn-success", method: :post %>
          <% else %>
            <span class="label label-primary">
              You are friends
            </span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
